<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradint_bg"
    tools:context="com.example.walinnsinnovation.iot.Activity.CommonActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linear_action"
        android:background="@color/tab_bg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_leftarrow"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txttitle"
            android:text="Device Name"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:id="@+id/view"
        android:layout_below="@+id/linear_action"
        android:background="@color/gray"/>

    <GridView
        android:id="@+id/grid_view"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:stretchMode="columnWidth" >

    </GridView>
</RelativeLayout>
